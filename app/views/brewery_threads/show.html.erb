      <%= link_to "Edit this thread", edit_brewery_thread_path(@brewery_thread), class: "text-muted", title: "Edit this Thread" %>
    <% end %>

    <p class="thread-details">
      <strong><%= brewery_state_link(@brewery_thread.brewery_state) %></strong>
      â€¢ Posted <%= time_ago_in_words(@brewery_thread.created_at) + ' ago' %> by <%= @brewery_thread.user.name %>
    </p>
  </div>
</div>
<%= render partial: "posts/post", collection: @brewery_thread.posts.includes(:user).sorted %>

